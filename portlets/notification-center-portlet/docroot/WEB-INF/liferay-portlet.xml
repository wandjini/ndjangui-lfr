<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
	
	<portlet>
		<portlet-name>1</portlet-name>
		<icon>/icon.png</icon>
		<scheduler-entry>
			<scheduler-event-listener-class>com.xpiping.notificationcenter.messaging.impl.QueuedEmailSenderListner</scheduler-event-listener-class>
			<trigger>
				<simple>
					<property-key>queuedemail.triggervalue</property-key>
					<time-unit>minute</time-unit>
				</simple>
			</trigger>
		</scheduler-entry>
		<control-panel-entry-category>
			portal
		</control-panel-entry-category>
		<control-panel-entry-weight>72</control-panel-entry-weight>
		<instanceable>false</instanceable>
		<header-portlet-css>/css/main.css</header-portlet-css>
		
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>
			notificationcenter-portlet
		</css-class-wrapper>
		<add-default-resource>true</add-default-resource>
	</portlet>
	<portlet>
		<portlet-name>2</portlet-name>
		<icon>/icon.png</icon>
		<control-panel-entry-category>
			portal
		</control-panel-entry-category>
		<control-panel-entry-weight>71</control-panel-entry-weight>
		<instanceable>false</instanceable>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>2-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>3</portlet-name>
		<icon>/icon.png</icon>
		<control-panel-entry-category>
			portal
		</control-panel-entry-category>
		<control-panel-entry-weight>73</control-panel-entry-weight>
		<instanceable>false</instanceable>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>3-portlet</css-class-wrapper>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>